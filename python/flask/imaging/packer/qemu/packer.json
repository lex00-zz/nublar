{
  "variables": {
    "ansible_path": "../../../config_management/ansible",
    "script_path": "../../scripts",
    "vars_path": "../../../variables/qemu",
    "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
    "disk_size": "65536",
    "headless": "true",
    "install_dev_packages": "false",
    "locale": "en_US",
    "preseed" : "preseed.cfg"
  },
  "builders": [
    {
      "type": "qemu",
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "/install/vmlinuz noapic ",
        "file=/floppy/{{ user `preseed` }} ",
        "debian-installer={{ user `locale` }} auto locale={{ user `locale` }} kbd-chooser/method=us ",
        "hostname={{ user `qemu_hostname` }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "passwd/user-fullname={{ user `qemu_ssh_fullname` }} ",
        "passwd/user-password={{ user `qemu_ssh_password` }} ",
        "passwd/user-password-again={{ user `qemu_ssh_password` }} ",
        "passwd/username={{ user `qemu_ssh_username` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "http/{{ user `preseed` }}"
      ],
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `qemu_iso_checksum` }}",
      "iso_checksum_type": "{{ user `qemu_iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `qemu_iso_url` }}"
      ],
      "output_directory": "packer_output",
      "shutdown_command": "echo '{{ user `qemu_ssh_password` }}'|sudo -S shutdown -P now",
      "ssh_password": "{{ user `qemu_ssh_password` }}",
      "ssh_username": "{{ user `qemu_ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "vm_name": "{{ user `qemu_hostname` }}",
      "qemuargs": [
        [ "-m", "{{ user `qemu_memory` }}" ],
        [ "-smp", "cpus={{ user `qemu_cpus`}}"]
      ]
    }
  ],
  "provisioners": [
    {
         "type": "shell",
         "execute_command": "echo '{{ user `qemu_ssh_password` }}' | sudo -S su - {{ user `qemu_ssh_username` }} -c '{{ .Path }}'",
         "scripts": [
            "{{ user `script_path` }}/install_ansible.sh"
         ]
    },
    {
      "type": "ansible-local",
      "host_vars": "{{ user `vars_path` }}",
      "playbook_dir": "{{ user `ansible_path` }}",
      "playbook_paths": "{{ user `ansible_path` }}",
      "playbook_file": "{{ user `ansible_path` }}/nublar.yml",
      "galaxy_file": "{{ user `ansible_path` }}/requirements.yml",
      "extra_arguments": [ "--extra-vars \"@host_vars/nublar.json\"" ]
    }
  ]
}
